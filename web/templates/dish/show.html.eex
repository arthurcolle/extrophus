<h2>Show dish</h2>

<a href="/dishes/<%= @dish.id %>/<%= current_user(@conn).id %>/order">Order dish</a>

<ul>
<style>
li {
  list-style-type: none;
}
</style>
  <li>
    <strong>Name:</strong>
    <%= @dish.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @dish.description %>
  </li>

  <li>
    <strong>Price:</strong>
    <%= @dish.price %>
  </li>

  <li>
    
    <%= if @dish.pic_url do %>
      <img height="400px" src=<%= @dish.pic_url %> style="border-radius: 20px 20px 20px 20px">
    <% else %>
      <img height="400px" src=<%= @dish.insta_url %> style="border-radius: 20px 20px 20px 20px">
    <% end %>

  </li>

</ul>

<%= link "Back", to: user_dish_path(@conn, :index, @dish) %>