<script>
destroy = function() {
  $('#q').val('');
  $('#results').empty();
}

$(function() {
  $('#results').mouseleave(function() {
    destroy();
  });
});

myHandler = function() {
  if ($("#q").val() != "") {
    $.ajax({
      type: "GET",
      url: "/get_nearest"
      // ,
      // data: {query: $("#q").val()}
    }).done(function(data) {
      $('#results').show();
      if (data['results'] !== undefined) {
        if (data['results'].length !== 0) {
          $('#results').empty();
          var res = data['results'];
          console.log(res);
          res.forEach( function (r) {
            console.log(r[0]);
              $('#results').append("<a href='/users/"+r[0]+"'>"+r[1]+"</a></br>");              
          });
        }        
      }
      console.log(data);
    });    
  }
}
</script>



          <form class="navbar-form navbar-right">
